<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="container-xl">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>title <i class="fa fa-sort"></i></th>
                        <th>description</th>
                        <th>authors <i class="fa fa-sort"></i></th>
                        <th>favorite</th>
                        <th>fileCover <i class="fa fa-sort"></i></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= book.title %></td>
                        <td><%= book.description %></td>
                        <td><%= book.authors %></td>
                        <td><%= book.favorite %></td>
                        <td><%= book.fileCover %></td>
                        <td>
                            <a href="/book/update/<%= book.id %>" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons btn btn-sm btn-primary ">&#xE254;</i></a>
                            <form action="/book/delete/<%= book.id %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>

</div> 

<%- include("../partials/layout-end") %>



