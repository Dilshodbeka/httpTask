<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="container-xl">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>title <i class="fa fa-sort"></i></th>
                        <th>description</th>
                        <th>authors <i class="fa fa-sort"></i></th>
                        <th>favorite</th>
                        <th>fileCover <i class="fa fa-sort"></i></th>
                        <th>fileName</th>
                        <th>fileBook</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= book.title %></td>
                        <td><%= book.description %></td>
                        <td><%= book.authors %></td>
                        <td><%= book.favorite %></td>
                        <td><%= book.fileCover %></td>
                        <td><%= book.fileName %></td>
                        <td><%= book.fileBook %></td>
                        <td>
                            <a href="/book/update/<%= book.id %>" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons btn btn-sm btn-primary ">&#xE254;</i></a>
                            <a href="/book/delete/<%= book.id %>" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons btn btn-sm btn-danger">&#xE872;</i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
</div> 

<%- include("../partials/layout-end") %>



