<div class="container mt-5">
  <div class="d-flex justify-content-center row">
    <div class="col-md-6">
      <form class="bg-white comment-section" id="chat-form">
        <div class="d-flex flex-row user p-2">
          <div class="d-flex flex-column ml-2">
            <span class="name font-weight-bold">Comments</span>
          </div>
        </div>
        <div class="mt-2 p-2 chat-messages" >
          <p class="comment-content"></p>
        </div>
        <div class="d-flex justify-content-between p-3 border-top">
          <span>
            <input 
              id="myMsg" 
              required 
              autocomplete="off" 
              type="text" 
              placeholder="Leave a comment..."
            />
            <button
              type="submit" id="subBtn"
            >
              Send
            </button></span
          >
          <div class="d-flex align-items-center border-left px-3 comments">
            <i class="fa fa-comment"></i><span class="ml-2" id="numComments"></span>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
